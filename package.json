        "configstore": "^7.0.0",
        "dotenv": "^16.4.5",
        "dotenv-expand": "^11.0.6",
        "esbuild": "^0.19.0",
        "esm": "^3.2.25",
        "execa": "^8.0.1",
        "figlet": "^1.7.0",
        "figures": "^6.1.0",
        "find-up": "^6.3.0",
        "fs-extra": "^11.2.0",
        "glob": "^11.0.0",
        "globby": "^13.2.2",
        "inquirer": "^10.1.6",
        "moment": "^2.30.1",
        "ora": "^6.3.1",
        "pathe": "^1.1.2",
        "picocolors": "^1.0.0",
