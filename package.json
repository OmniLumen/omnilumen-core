        "@babel/plugin-transform-runtime": "^7.24.7",
        "@babel/preset-env": "^7.25.3",
        "@eslint/config-array": "^0.17.1",
        "@eslint/object-schema": "^2.1.4",
        "chai": "^5.1.1",
        "eslint": "^9.9.0",
        "jest": "^29.7.0",
        "jsdoc": "^4.0.3",
        "mocha": "^10.7.3",
        "rimraf": "^6.0.1"
    }
