{
    "name": "@omnilumen/core",
    "version": "1.0.0",
    "description": "Core library for OmniLumen",
    "main": "dist/esm/index.js",
    "type": "module",
    "scripts": {
        "clean": "rimraf dist",
        "build:cjs": "babel src --out-dir dist/cjs --env-name cjs",
        "build:esm": "babel src --out-dir dist/esm --env-name esm",
        "build": "npm run clean && npm run build:cjs && npm run build:esm",
        "test": "mocha 'test/**/*.test.js'",
        "lint": "eslint . --ext .js",
        "lint:fix": "eslint . --ext .js --fix"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OmniLumen/omnilumen-core.git"
    },
    "engines": {
        "node": "22.x"
    },
    "keywords": [
        "omnilumen",
        "stellar",
        "soroban",
        "blockchain",
        "lumen",
        "stellar-cli",
        "stellar-quickstart",
        "web3",
        "cli",
        "llm",
        "development-suite"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/OmniLumen/omnilumen-core/issues"
    },
    "homepage": "https://github.com/OmniLumen/omnilumen-core#readme",
    "dependencies": {
        "axios": "^1.7.2",
        "boxen": "^8.0.0",
        "cfonts": "^3.3.0",
        "chalk": "^5.3.0",
        "child_process": "^1.0.2",
        "cli-spinners": "^3.1.0",
        "cli-table3": "^0.6.5",
        "columnify": "^1.6.0",
